---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Themes" active="activated">

    <h1>Themes</h1>

<div class="card-container">
    <Card 
        title="DashCards"
        body="Versatility and function with style."
        href=""
        type="KLWP"
        cover_image="themes/Card-Dashcards.png"
    />
    <Card 
        title="Catalyst"
        body="The perfect iOS clone for Android made with KLWP with tons of customization."
        href=""
        type="KLWP"
        cover_image="themes/Card-catalyst.png"
    />
    <Card 
        title="Vanta"
        body="98.97% Black. A gift your AMOLED display and battery craves."
        href=""
        type="KLWP"
        cover_image="themes/Card-vanta.png"
    />
    <Card 
        title="FrostCards"
        body="Default Android launcher is not customizable. Said no one."
        href=""
        type="KWGT"
        cover_image="themes/Card-FrostCards.png"
    />
    <Card 
        title="Potion"
        body="Minimalism without compromising function."
        href=""
        type="KWGT"
        cover_image="themes/Card-potion.png"
    />
</div>

</Layout>

<style>
   .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); 
        width: 100%;
        gap: 1em;
        padding: 20px 0;
    }

    @media only screen and (max-width: 768px) { 
    }
</style>