<style is:global>
	:root {
		/* Background */
		--background: #ffffff;
		--background-inverse:#393939;
		--background-inverse-hover: #474747;
		--background-active: #C6C6C6;
		--background-hover: #F1F1F1;
		--background-selected: #E8E8E8;
		--accent: #ED522C;
		--accent-secondary: #F17556;

		/* Layers */
		/* Background color for layers on top of --background */
		--layer-01: #F4F4F4;  
		/* Colors on --layer-01 */
		--layer-hover-01: #E8E8E8;
		--layer-active-01: #C6C6C6;
		--layer-selected-01: #E0E0E0;

		/* Background color for layers on top of --layer-01 */
		--layer-02: #FFFFFF; 
		/* Colors on --layer-02 */
		--layer-hover-02: #E8E8E8;
		--layer-active-02: #C6C6C6;
		--layer-selected-02: #E0E0E0;

		/* Background color for layers on top of --layer-02 */
		--layer-03: #F4F4F4; 
		/* Colors on --layer-03 */
		--layer-hover-03: #E8E8E8;
		--layer-active-03: #C6C6C6;
		--layer-selected-03: #E0E0E0;

		--layer-disabled: #8D8D8D;

		/* Borders */
		/* Subtle border color on --background */
		--border-subtle-00: #E0E0E0;

		/* Subtle border color on --layer-01 */
		--border-subtle-01: #C6C6C6;		
		/* Subtle border color on --layer-02 */
		--border-subtle-02: #E0E0E0;
		/* Subtle border color on --layer-03 */
		--border-subtle-03: #C6C6C6;

		/* Selected state color for --border-subtle-XX */
		--border-subtile-selected: #C6C6C6;

		/* 3:1 AA color contrast border on all */
		--border-strong: #8D8D8D;

		/* 4.5:1 AA color contrast border on all layers.
		Highest contrast border. */
		--border-inverse: #525252;

		/* Interactive or selected border color */
		--border-interactive: #ED522C;
		--border-disabled: #C6C6C6;

		--border: #e0e0e0;

		/* Text */
		--text-primary: #161616;
		--text-secondary: #525252;
		--text-placeholder: #A8A8A8;
		--text-on-color: #FFFFFF;
		--text-helper: #6F6F6F;
		--text-error: #DA1E28;
		--text-inverse: #FFFFFF;
		--text-disabled: #C5C5C5;
		--text-on-color-disabled: #8D8D8D;

		/* Buttons */
			/* Primary */
		--button-primary: #ED522C;
		--button-primary-hover: #BE4223;
		--button-primary-active: #8E311A;
			/* Secondary */
		--button-secondary: #393939;
		--button-secondary-hover: #474747;
		--button-secondary-active: #6F6F6F;
			/* Tertiary */
		--button-tertiary: #ED522C;
		--button-tertiary-hover: #BE4223;
		--button-tertiary-active: #8E311A;
			/* Dangers */
		--button-danger-primary: #DA1E28;
		--button-danger-secondary: #da1e28;
		--button-danger-active: #750E13;
		--button-danger-hover: #B81922;
			/* Other */
		--button-separator: #e0e0e0;
		--button-border: #e5e5e5;
		--button-disabled: #c6c6c6;
	}

	/* –––  PAGE STYLING  ––– */

	body {
		margin: 0;
		color: var(--text-primary);
		max-height: 100vw;
	}
	main {
		padding: 10px 40px; /* Main content padding */
		min-height: 100vh;
	}
	a {
		all: unset;
		cursor: pointer;
		transition: all .1s;
		border-bottom: 1px solid var(--accent);
	}
	a:hover {
		color: var(--accent-secondary);
		transition: all .1s;
	}

	html {
		
		background: var(--background);
		font-family: 'Overused Grotesk', sans-serif;
	}

	h1 {
		font-family: 'Nohemi', sans-serif;
	}

	/* Header */
	header {
		background-color: var(--background-inverse);
		z-index: 900;
		height: 50px;
		width: 100%;
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		align-content: center;
	}
	header a {
		border-bottom: none;
	}

	#header-logo {
		height: 100%;
    align-content: center;
	}
		#header-logo img {
			height: 50%;
			padding-top: 2px;
		}

	#hamburger {
		fill: var(--text-inverse);
		height: 50%;
	}
	header .links-container {
		font-size: .9em;
		display: flex;
		color: var(--text-inverse);
		align-items: center;
	}
	header .link { 
		padding: 0 1em;
	}
	header .link:hover {
		color: unset;
		background-color: var(--background-inverse-hover);
	}
	header span {
		height: 40%;
		width: 1px;
		margin: 0 .6em 0 1.4em;
		background: var(--text-secondary);
	}
	/* Apply the accent border only when data-astro-active is true */
    header .link[data-astro-active] {
		border-bottom: 2px solid var(--accent);

	}

	/* –––   MARKDOWN   ––– */
	blockquote {
		width: fit-content;
		padding: 0.1em 1.4em;
		margin: 0;
		background-color: var(--background-selected);
		border-left: 4px solid var(--accent-secondary);
	}

	/* –––   BUTTONS   ––– */
	.button-primary {
		background: none;
	}

